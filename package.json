{
  "name": "holodex-plus",
  "description": "Holodex companion extension",
  "version": "0.0.1",
  "scripts": {
    "build": "rollup -c",
    "clean": "rimraf build dist",
    "dev": "rollup -c --watch",
    "dev:firefox": "web-ext run -s build",
    "dist": "web-ext build -s build -a dist",
    "format": "pretty-quick",
    "lint": "web-ext lint -s build",
    "prepare": "husky install"
  },
  "dependencies": {
    "@mdi/js": "^6.1.95",
    "webextension-polyfill": "^0.8.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@types/webextension-polyfill": "^0.8.0",
    "@web/rollup-plugin-html": "^1.10.1",
    "archiver": "^5.3.0",
    "fs-extra": "^10.0.0",
    "glob": "^7.1.7",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "prettier": "2.3.2",
    "pretty-quick": "^3.1.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.3",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "typescript": "^4.4.3",
    "web-ext": "^6.4.0"
  },
  "lint-staged": {
    "*.{mjs,js,ts,svelte,md,html,json}": "prettier --write"
  },
  "private": true
}
